@model Ubus.App.Command.CreateViagemCommand

@{
    ViewData["Title"] = "Adicionar";
}

<h1>Adicionar</h1>

<h4>Viagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input type="number" asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Saida" class="control-label"></label>
                <input type="date" asp-for="Saida" class="form-control" />
                <span asp-validation-for="Saida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chegada" class="control-label"></label>
                <input type="date" asp-for="Chegada" class="form-control" />
                <span asp-validation-for="Chegada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeiculoId" class="control-label"></label>
                <input asp-for="VeiculoId" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="RotaId" class="control-label"></label>
                <input asp-for="RotaId" class="form-control" type="hidden"  />
            </div>
            <div class="form-group">
                <select asp-for="Finalizado" class="custom-select">
                    <option value="true">Finalizado</option>
                    <option value="false">Em Andamento</option>
                </select>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="btn btn-warning" href="#" onclick="window.history.back()">Voltar</a>
</div>